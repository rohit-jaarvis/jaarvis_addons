<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Annual leave -->
        <record id="holiday_status_annual_leave" model="hr.holidays.status">
            <field name="name" eval="'Annual Leaves '+time.strftime('%Y')"/>
            <field name="limit" eval="False"/>
            <field name="color_name">blue</field>
        </record>

        <!-- Casual leave -->
        <record id="holiday_status_casual_leave" model="hr.holidays.status">
            <field name="name">Casual Leaves</field>
            <field name="limit" eval="False"/>
            <field name="color_name">lightgreen</field>
        </record>

        <!-- Jaarvis Days -->
        <record id="holiday_status_jaarvis_days" model="hr.holidays.status">
            <field name="name">Jaarvis Days</field>
            <field name="limit" eval="False"/>
            <field name="color_name">violet</field>
        </record>

    </data>
</odoo>
